{% block advanced_image_widget %}
    <div class="form-group">
        <nav>
            <div class="nav nav-tabs" id="{{ local_id }}" role="tablist">
                <button class="nav-link active" id="{{ local_id }}-inputs-tab"
                        data-bs-toggle="tab" data-bs-target="#{{ local_id }}-inputs"
                        type="button" role="tab" aria-controls="{{ local_id }}-inputs" aria-selected="true">
                    Inputs
                </button>
                <button class="nav-link" id="{{ local_id }}-preview-tab"
                        data-bs-toggle="tab" data-bs-target="#{{ local_id }}-preview"
                        type="button" role="tab" aria-controls="{{ local_id }}-preview" aria-selected="false">
                    Preview
                </button>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="{{ local_id }}-inputs" role="tabpanel"
                 aria-labelledby="{{ local_id }}-inputs-tab">
                {% for child in form.children|filter(child => not child.rendered) %}
                    {{ form_row(child) }}
                {% endfor %}
            </div>
            <div class="tab-pane fade" id="{{ local_id }}-preview" role="tabpanel"
                 aria-labelledby="{{ local_id }}-preview-tab">
                {{ value|image('original', {'class': 'img-thumbnail'}) }}
            </div>
        </div>
    </div>
{% endblock %}